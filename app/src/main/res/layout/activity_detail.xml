<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity">

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="@drawable/baseline_arrow_back_ios_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:text="Chi Tiết"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/bg_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgHinhanhsp_Detail"
                android:layout_width="match_parent"
                android:layout_height="277dp"
                android:src="@drawable/img01" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtTensp_detail"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:textSize="26dp"
            android:textStyle="bold"
            android:text="Tên SP"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtGiasp_Detail"
            android:textColor="@color/red_gia"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Giá 1222"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="42dp"/>

        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/bg_tab"
            app:cardCornerRadius="15dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtMota_Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_margin="15dp"
                android:text="Mô tả sp..............................................................................................................................................................................................................................................."
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="173dp"
                android:layout_height="56dp"
                android:textSize="15dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                android:backgroundTint="@color/green_cyan"
                android:text="Thêm giỏ hàng" />
            <Button
                android:id="@+id/btnDetailMua"
                android:layout_width="173dp"
                android:layout_height="56dp"
                android:textSize="15dp"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/green_cyan"
                android:text="Mua" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>