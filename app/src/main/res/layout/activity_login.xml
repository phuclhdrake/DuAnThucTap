<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginBottom="20dp"
        android:text="Welcome Back!"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="15dp"
        android:layout_marginBottom="80dp"
        android:text="Please enter your account here"/>

    <EditText
        android:id="@+id/edt_User_login"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:background="@drawable/circle_bg"
        android:hint="User"
        android:inputType="text"
        android:padding="15dp" />

    <EditText
        android:id="@+id/edt_Pass_login"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:padding="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/circle_bg"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/green_cyan"
        android:text="Login" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Donâ€™t have any account?"/>
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/green_cyan"
            android:backgroundTint="@color/white"
            android:text="Sign Up"/>
    </LinearLayout>

</LinearLayout>