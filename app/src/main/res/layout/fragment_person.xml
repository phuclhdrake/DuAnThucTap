<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".fragment.FragmentPerson">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="visible"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/imgBtnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:background="@drawable/baseline_arrow_back_ios_24"/>
        <TextView
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Tài Khoản"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/radius15"
        android:backgroundTint="@color/green_cyan"
        android:orientation="vertical">

        <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/imgperson"/>

        <TextView
            android:id="@+id/txt_username_person"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Tên đăng nhập"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <Button
        android:layout_width="382dp"
        android:layout_height="56dp"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/green_cyan"
        android:text="Đổi mật khẩu" />

    <Button
        android:layout_width="382dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:backgroundTint="@color/green_cyan"
        android:text="Đăng xuất" />

    <Button
        android:id="@+id/btnAdmin"
        android:layout_width="382dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:backgroundTint="@color/color_bottom_click"
        android:text="ADMIN"
        android:visibility="visible"/>

</LinearLayout>