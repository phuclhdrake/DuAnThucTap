<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_height="155dp">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius15"
        android:backgroundTint="@color/green_cyan"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_admin_product"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@drawable/radius15"
            android:src="@drawable/img04"
            />
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="210dp"
            android:layout_gravity="center"
            android:layout_height="125dp">
            <TextView
                android:id="@+id/txtTensp_admin_product"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Tên Sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/txtGia_admin_product"
                android:textColor="@color/red_gia"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="100000000"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/txtMota_admin_product"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="normal"
                android:text="Mô tả ........................................................................................................................................................................................"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="75dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/btn_editProduct_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginVertical="10dp"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/edit" />
            <ImageView
                android:id="@+id/btn_deleteProduct_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginVertical="10dp"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/delete" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>